WindowManager:
    LandingPage:
        name: 'landing'
    ImageChooserPage:
        name:'ImageChooser'

    Scroll:
        name:'game'

<LandingPage>:
    id: LandingPage
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 119 / 250.0, 77 / 250.0, 98 / 250.0, 0.8
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'appFoto/l1.jpg'
    BoxLayout:
        padding: 0, 10, 0, 0
        orientation: 'horizontal'
        Button:
            id: up_button
            canvas:
                Color:
                    rgba: 149 / 250.0, 77 / 250.0, 114 / 250.0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: .7
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'y': .9}
            text: "dRiDi MemOry"
            bold: True
            font_size: self.width / 20
            on_release : root.exit_app()#root.reset_landing()

    BoxLayout:
        padding: 100, 0, 100, 0
        orientation: 'horizontal'
        Label:
            id: dridi
            canvas:
                Color:
                    rgba: 149 / 250.0, 77 / 250.0, 114 / 250.0, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_x: .8
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'y': .3}
            text: "wElke dRidI bEn jiJ?"
            color: (173 / 255, 132 / 255, 153 / 255, 1)
            font_size: self.width / 15

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_x': .5, 'y': .2}
        size_hint: .5, .1
        padding: 0, 10, 0, 0
        TextInput:
            id: name_input
            background_color: (0, 0, 0, .5)
            foreground_color: (149 / 250.0, 77 / 250.0, 114 / 250.0, .8)
            on_text_validate: root.screen_transition()
            canvas.after:
                Color:
                    rgba: 149 / 250.0, 77 / 250.0, 114 / 250.0, 0.1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [58]
            write_tab: False
            focus: True
            halign: 'center'
            #valign: 'center'
            hint_text: root.hint_text
            on_text_validate: root.start_bt()
            on_text_validate: root.startPlay()
            multiline: False
            font_size: self.width / 12

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_x': .5, 'y': .1}
        size_hint: .2, .1
        padding: 0, 20, 0, 0
        RoundedButton:
            id: start_bt
            text: 'Start'
            font_size: self.width / 5
            color: (56 / 255, 10 / 255, 33 / 255, 1)
            on_press:

                root.start_bt()
                root.startPlay()



<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (149 / 250.0, 77 / 250.0, 114 / 250.0, .8)
